  <body style="background-color: #1a1a2e">
    <div class="content" id="login">
      <a href="/"><h1 class="login-header">Bradavice online</h1></a>

      <div class="change-pass-section container">

        <h3>Změna hesla herního účtu</h3>
        <form action="/change-password" method="POST">
            <div class="row">

                <div class="col-sm-12">
                    <input
                        class="form-control login-input"
                        type="text"
                        name="login"
                        id=""
                        placeholder="Login zadaný při registraci"
                        required
                    />
                    <input
                        class="form-control login-input"
                        type="password"
                        name="password"
                        id=""
                        placeholder="Nové heslo*"
                        required
                    />
                    <p class="input-description" >* Maximální délka hesla je 16 znaků.</p>

                    <input
                        class="form-control login-input"
                        type="password"
                        name="password2"
                        id=""
                        placeholder="Potvrzení nového hesla"
                        required
                    />
                </div>
            </div>
          <p class="error-message" id="error-message"><%=errorMessage%> </p>
          <button
            class="btn btn-lg btn-danger btn-login"
            type="submit"
          >
            Změnit heslo
          </button>
        </form>
      </div>
    </div>

